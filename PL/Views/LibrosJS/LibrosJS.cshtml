@{
    ViewBag.Title = "LibrosJS";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <h2 class="text-center mb-5">📚 Gestión de Libros</h2>

    <div class="row">

        <!-- Buscar por Autor -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white text-center">
                    Buscar libros por autor
                </div>
                <div class="card-body">
                    <input type="number" id="idAutor" class="form-control mb-3" placeholder="Id Autor">
                    <button class="btn btn-primary w-100" onclick="buscarPorAutor()">Buscar</button>

                    <ul id="listaLibros" class="list-group mt-3"></ul>
                </div>
            </div>
        </div>

        <!-- Buscar por Título -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-center">
                    Buscar libro por título
                </div>
                <div class="card-body">
                    <input type="text" id="titulo" class="form-control mb-3" placeholder="Título del libro">
                    <button class="btn btn-warning w-100" onclick="buscarPorTitulo()">Buscar</button>

                    <div id="resultadoTitulo" class="mt-3"></div>
                </div>
            </div>
        </div>

        <!-- Agregar Libro -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white text-center">
                    Agregar nuevo libro
                </div>
                <div class="card-body">
                    <input type="text" id="nuevoTitulo" class="form-control mb-3" placeholder="Título">
                    <input type="number" id="nuevoAutor" class="form-control mb-3" placeholder="Id Autor">
                    <input type="number" id="nuevaEditorial" class="form-control mb-3" placeholder="Id Editorial">
                    <input type="date" id="nuevaFecha" class="form-control mb-3">
                    <button class="btn btn-success w-100" onclick="agregarLibro()">Guardar libro</button>
                </div>
            </div>
        </div>

    </div>

    <!-- Detalle de Libro -->
    <div class="row mt-4">
        <div class="col-12">
            <div id="infoLibro" class="card shadow-sm p-3">
                <h5 class="text-center text-secondary">Detalle del libro seleccionado</h5>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/jquery-3.7.0.js"></script>
<script src="~/Scripts/JSCode/LibrosJs.js"></script>
